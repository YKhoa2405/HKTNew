@model IEnumerable<SellingFastFood.Models.Product>

@{
    ViewBag.Title = "TopProduct";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Top sản phẩm bán chạy tháng @ViewBag.currentMonth</h2>

<table class="table">
    <tr>
        <th>
            Tên
        </th>
        <th>
            Hình ảnh
        </th>

        <th>
            Giá
        </th>
        <th>
            Mô tả
        </th>
        <th>
            Danh mục
        </th>
        <th>
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            <img src="@item.ImageProduct" alt="@item.ProductName" style="width:50px;">
        </td>
        <td>
            @string.Format("{0:#,##0} VNĐ", item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category.CategoryName)
        </td>
    </tr>
}

</table>
