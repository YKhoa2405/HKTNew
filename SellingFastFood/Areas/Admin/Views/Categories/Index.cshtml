@model IEnumerable<SellingFastFood.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6">
        <h2>Quản lý Menu</h2>
    </div>
    <div class="col-md-6">
        <form action="@Url.Action("Index","Categories")" method="get" class="form-inline">
            <div class="form-group mb-2">
                <input type="text" class="form-control" name="search" value="@Request.QueryString["search"]" placeholder="Tìm kiếm danh mục theo tên ...">
            </div>
            <button class="btn btn-primary mb-2" type="submit">
                <i class="fa fa-search"></i> Tìm kiếm
            </button>
        </form>
    </div>
</div>

<p>
    @Html.ActionLink("Thêm danh mục", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.CategoryID }) |
            @Html.ActionLink("Chi tiết", "Details", new { id=item.CategoryID }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.CategoryID })
        </td>
    </tr>
}

</table>
