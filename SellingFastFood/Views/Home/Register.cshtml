@model SellingFastFood.Models.User

@{
    ViewBag.Title = "Đăng ký tài khoản";
    Layout = "~/Views/Shared/BaseView.cshtml";
}

<main class="d-flex w-100">
    <div class="container d-flex flex-column">
        <div class="row vh-20">
            <div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
                <div class="d-table-cell align-middle">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="text-center mt-4">
                        <h1 class="h2">Đăng ký tài khoản</h1>
                    </div><div class="card">
                        <div class="card-body">
                            <div class="m-sm-4">
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                                <div>
                                    <div class="mb-2">
                                        <label class="form-label">Họ và tên</label>
                                        @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="mb-2">
                                        <label class="form-label">Email</label>
                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="mb-2">
                                        <label class="form-label">Số điện thoại</label>
                                        @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="mb-2">
                                        <label class="form-label">Mật khẩu</label>
                                        @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="mb-2">
                                        <label class="form-label">Avatar</label>
                                        @Html.EditorFor(model => model.Avatar, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Avatar, "", new { @class = "text-danger" })
                                    </div>

                                    <div class="text-center mt-3">
                                        <input type="submit" value="Đăng ký" class="btn btn-lg btn-primary" />
                                    </div>

                                    <div class="mt-4 text-center">
                                        <p class="lead" style="font-size:16px">
                                            Bạn đã có tài khoản, đăng nhập <a href="@Url.Action("Login")">Tại đây</a>
                                        </p>
                                    </div>

                                </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

