@model SellingFastFood.Models.User

@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/BaseView.cshtml";
}

<main class="d-flex w-100">
    <div class="container d-flex flex-column">
        <div class="row vh-40">
            <div class="col-sm-10 col-md-8 col-lg-6 mx-auto d-table h-100">
                <div class="d-table-cell align-middle">
                    <div class="text-center mt-4">
                        @if (ViewBag.LoginFail != null)
                        {
                            <div class="alert alert-danger">
                                <strong>@ViewBag.LoginFail</strong>
                            </div>
                        }
                        <h1 class="h2">Đăng nhập tài khoản</h1>
                    </div>

                    <div class="card">
                        <div class="card-body">
                            <div class="m-sm-4">
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()
                                    <div>
                                        <div class="mb-2">
                                            <label class="form-label ">Email</label>
                                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                        </div>

                                        <div class="mb-2">
                                            <label class="form-label ">Mật khẩu</label>
                                            @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                                        </div>

                                        <div class="text-center mt-3">
                                            <input type="submit" value="Đăng nhập" class="btn btn-lg btn-primary" />
                                        </div>

                                        <div class="mt-4 text-center">
                                            <p class="lead" style="font-size:16px">
                                                Bạn chưa có tài khoản, đăng ký <a href="@Url.Action("Register")">Tại đây</a>
                                            </p>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>