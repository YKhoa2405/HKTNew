@model IEnumerable<SellingFastFood.Models.CartModel>

@{
    ViewBag.Title = "HKT FastFood";
    Layout = "~/Views/Shared/BaseView.cshtml";
}

@using (Html.BeginForm("OrderProduct", "Cart", FormMethod.Post))
{
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-lg-8">
                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Địa chỉ giao hàng</span></h5>
                <div class="bg-light p-30 mb-3">
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label>Họ và tên</label>
                            <input class="form-control" type="text" name="NameShip" placeholder="Tên người nhận" required>
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Số điện thoại</label>
                            <input class="form-control" type="text" name="PhoneShip" placeholder="Số điện thoại" required>
                        </div>
                        <div class="col-md-6 form-group">
                            <label>Địa chỉ</label>
                            <input class="form-control" type="text" name="DeliveryAdress" placeholder="Đường số 1, nhà số 1" required>
                        </div>
                    </div>
                </div>

                <div>
                    <a class="btn btn-primary" href="@Url.Action("ListCarts","Cart")"><i class="fa fa-chevron-left mr-2"></i>Quay về giỏ hàng</a>
                </div>
            </div>
            <div class="col-lg-4">
                <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Đơn hàng</span></h5>
                <div class="bg-light p-30 mb-5">
                    <div class="border-bottom">
                        <h6 class="mb-3">Sản phẩm</h6>
                        @foreach (var item in Model)
                        {
                            <div class="d-flex justify-content-between">
                                <p>@item.ProductName</p>
                                <p>@string.Format("{0:#,##0} VNĐ", item.Price) x @item.Quantity</p>
                            </div>
                        }


                    </div>
                    <div class="border-bottom pt-3 pb-2">
                        <div class="d-flex justify-content-between mb-3">
                            <h6>Tạm tính</h6>
                            <h6>@ViewBag.Total</h6>

                        </div>
                        @*                    <div class="d-flex justify-content-between">
                                <h6 class="font-weight-medium">Tiền ship</h6>
                                <h6 class="font-weight-medium">10,000 VND</h6>
                            </div>*@
                    </div>
                    <div class="pt-2">
                        <div class="d-flex justify-content-between mt-2">
                            <h5>Tổng cộng</h5>
                            <h6>@ViewBag.Total</h6>
                            @*                        <input type="hidden" name="totalAmount" value="50" />*@
                        </div>
                    </div>
                </div>
                <div class="mb-5">
                    <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Thanh toán</span></h5>
                    <div class="bg-light p-30">
                        <div class="form-group">
                            <div class="custom-control custom-radio d-flex justify-content-between align-items-center">
                                <input type="radio" class="custom-control-input" name="paymentMethod" id="paypal" value="1" checked>
                                <label class="custom-control-label mb-0" for="paypal">Thanh toán khi nhận hàng(COD)</label>
                                <i class="fa fa-money-bill ml-2"></i>
                            </div>
                        </div>
                        @*                    <div class="form-group mb-4">
                                <div class="custom-control custom-radio d-flex justify-content-between align-items-center">
                                    <input type="radio" class="custom-control-input" name="paymentMethod" id="banktransfer" value="2">
                                    <label class="custom-control-label mb-0" for="banktransfer">Thanh toán qua VNPay</label>
                                    <i class="fa fa-cc-paypal ml-2"></i>
                                </div>
                            </div>*@
                        @*<a class="btn btn-block btn-primary font-weight-bold my-3 py-3" href="@Url.Action("OrderProduct","Cart")">Đặt hàng</a>*@
                        <button type="submit" class="btn btn-block btn-primary font-weight-bold my-3 py-3">Đặt hàng</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
    

