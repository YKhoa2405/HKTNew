
@{
    ViewBag.Title = "Hoàn thành đặt hàng";
    Layout = "~/Views/Shared/BaseView.cshtml";
}

<div class="container text-center mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card">
                <div class="card-body">
                    <img src="~/Content/image/check.png" class="img-fluid mb-4" alt="Success Image" style="max-width: 250px;">
                    <h4 class="card-title text-success mb-5">Đặt hàng thành công!</h4>
                    <p class="card-text">Cảm ơn quý khách đã lựa chọn sản phẩm của <b>HKT Fastfood</b>.</p>
                    <p class="card-text">Đơn hàng sẽ sớm được giao tới quý khách.</p>
                    <a href="@Url.Action("","Home")" class="btn btn-primary mb-2 mt-2">Trở về trang chủ</a>
                </div>
            </div>
        </div>
    </div>
</div>

